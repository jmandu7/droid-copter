<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.quadcopter"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" 
    			android:label="@string/app_name"
    			android:persistent="true">
        <activity android:name=".ui.QuadCopterActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
				  android:configChanges="orientation|keyboardHidden|keyboard"
				  android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

		<service android:enabled="true" android:permission="android.permission.INTERNET" android:name=".webserver.WebServerService" android:exported="true" android:process=":WebServer">
	      	<intent-filter>
	        	<action android:name="com.quadcopter.webserver.IWebServerService"/>
	       	</intent-filter>
      	</service>
    </application>
	<uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/> 
    
    <uses-sdk android:minSdkVersion="8" />
</manifest> 